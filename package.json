	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@rainbow-me/rainbowkit": "^2.2.0",
		"@tanstack/react-query": "^5.59.15",
		"@types/node": "^20.16.14",
		"@types/react": "^18.3.11",
		"changeset": "^0.2.6",
		"react": "^18.3.1",
		"tsup": "^8.3.0",
		"typescript": "^5.6.3",
		"viem": "~2.21.32",
		"wagmi": "^2.12.22"
