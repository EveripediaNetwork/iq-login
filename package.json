		"next": "15.0.0",
		"react": "19.0.0-rc-65a56d0e-20241020",
		"react-dom": "19.0.0-rc-65a56d0e-20241020",
		"viem": "2.x",
		"wagmi": "^2.12.4"
	},
	"files": [
		"dist",
		"!**/*.test.*",
		"!**/*.json",
		"CHANGELOG.md",
		"LICENSE",
		"README.md"
	],
	"publishConfig": {
		"access": "public"
